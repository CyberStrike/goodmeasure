<section class="half">

<h1>Listing enrollments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Cohort</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.user.first_name %></td>
        <td><%= enrollment.cohort.name %></td>
        <td><%= enrollment.role.title %></td>
        <td><%= link_to 'Show', admin_enrollment_path(enrollment) %></td>
        <td><%= link_to 'Edit', edit_admin_enrollment_path(enrollment) %></td>
        <td><%= link_to 'Destroy', admin_enrollment_path(enrollment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Enrollment', new_admin_enrollment_path %>

</section>
